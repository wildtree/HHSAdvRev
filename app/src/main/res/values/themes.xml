<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ベースのアプリケーションテーマ -->
    <style name="Theme.HHSAdvRev" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- プライマリブランドカラー -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- セカンダリブランドカラー -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- ステータスバーの色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- ここでテーマをカスタマイズ -->
    </style>

    <!-- Toolbar を使用する Activity 用のテーマを追加または修正 -->
    <style name="Theme.HHSAdvRev.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Components を使用していない場合は Theme.AppCompat.Light.NoActionBar のような親を使用 -->
        <!--
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        -->
        <!-- 上記のように NoActionBar テーマを直接継承することもできますし、
             親テーマが NoActionBar テーマでない場合にこれらの項目を手動で設定することもできます。
             親が既に NoActionBar テーマ（Theme.MaterialComponents.DayNight.NoActionBar や
             Theme.AppCompat.Light.NoActionBar など）の場合、これらの項目は既に false/true に設定されています。
        -->

        <!-- その他のテーマのカスタマイズ -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- カスタムフルスクリーンテーマ -->
    <style name="Theme.HHSAdvRev.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item> <!-- 画面上部の影を消す場合 -->
    </style>

    <style name="Theme.HHSAdvRev.SettingScreen" parent="Theme.HHSAdvRev.NoActionBar">
        <item name="colorPrimary">@color/hhsadv_hilite_color</item>
    </style>
</resources>

